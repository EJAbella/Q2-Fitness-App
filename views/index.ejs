<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Fitness App</title>
  <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.3/materia/bootstrap.min.css" rel="stylesheet" integrity="sha384-5bFGNjwF8onKXzNbIcKR8ABhxicw+SC1sjTh6vhSbIbtVgUuVTm2qBZ4AaHc7Xr9" crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/nav.css">
  <link href="https://fonts.googleapis.com/css?family=ABeeZee" rel="stylesheet">
  <style media="screen">
    * {
      font-family: 'ABeeZee', sans-serif;
    }

    body {
      height: 100vh;
      background-image: url('https://i1.wp.com/thelocalstretch.com/wp-content/uploads/2017/07/IMG_4383-1.jpg?fit=2000%2C1124');
      background-repeat: no-repeat;
      background-size: cover;
      margin: 0px;
      padding: 0px;
      display: flex;
      flex-direction: column;
      font-family: arial;
    }

    header {
      height: 10vh;
      background-color: rgba(33, 150, 243, .5);
      width: 100%;
      /* background-image: url('https://cdn-ami-drupal.heartyhosting.com/sites/muscleandfitness.com/files/styles/homepage_top_1440x500/public/media/crossfit-image.png?itok=NAhCVnTS'); */
      background-position: center;
      color: white;
      box-shadow: black, 10px, 10px;
      margin: 0px;
    }

    h1 {
      margin: 0;
      padding: 1vh 0px;
      font-weight: bold;
    }

    footer {
      color: whitesmoke;
      height: 8vh;
      background-color: rgba(33, 150, 243, .5);
      flex-shrink: 0;
      align-self: center;
      width: 100%;
      /* background-image: url('https://jooinn.com/images/metal-texture-23.jpg'); */
    }

    .title-head {
      text-align: center;
      padding: 3vh;
    }

    .login-container {
      flex: 1 0 auto;
      display: flex;
      align-items: center;
      justify-content: center;
      align-items: baseline;
      text-align: center;
      display: inline-block;
      padding-top: 50px;
    }

    form {
      align-items: center;
      display: flex;
      justify-content: center;
      flex-direction: column;
    }

    h2 {
      color: whitesmoke;
    }

    p {
      font-size: 25px;
      text-align: center;
      padding-top: 15px;
      margin: 0px;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgb(0,0,0);
      background-color: rgba(0,0,0,0.4);
    }

    h3 {
      color: #2196F3;
    }

    .allExercises-content {
      width: 30%;
    }

    input {
      width: 200px;
    }

    button {
      width: 200px;
    }

    .register-input-field {
      width: 300px;
    }

  </style>
</head>

<body>
  <header>

    <h1 class="title-head">Fit With Friends</h1>

  </header>

  <div class="login-container">
    <div class="login">
      <h2>Login</h2>
      <form action="/login" method="post">
        <input type="text" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Password">
        <br>
        <input type="submit" value="enter" class="btn btn-primary btn-lg" id="modal">
      </form>
    </div>
    <br>

    <button class= "btn btn-primary btn-lg" id="reg-btn" type="button" name="button">Register</button>
<!-- modal work -->

  <div class="modal">

    <div class="register allExercises-content">
      <h3>Register</h3>
      <span class="close">&times;</span>
      <form action="/register" method="post" class="modal-register-form">
        <input class="register-input-field" type="text" name="name" placeholder="Name">
        <input class="register-input-field" type="text" name="email" placeholder="Email">
        <input class="register-input-field" type="text" name="password" placeholder="Password">
        <br>
        <input type="submit" value="enter" class="btn btn-primary btn-lg">
      </form>
    </div>

  </div>

  </div>


  <footer>
    <p> &copy; 2018 Elijah and Seth </p>
  </footer>

  <!-- modal logic -->
  <script type="text/javascript">

    let btn = document.querySelector('#reg-btn')
    let modal = document.querySelector('.modal')
    const span = document.querySelector('.close')

    btn.onclick = function() {
      modal.style.display = "block";
    }

    span.onclick = function() {
      modal.style.display = "none";
    }

    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }

  </script>
</body>

</html>
